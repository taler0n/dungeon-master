<Window x:Class="DaGame.DeathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DungeonMaster" FontFamily="{StaticResource Pixel}" Icon="pack://application:,,,/Resources/Images/tile_t.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow" Height="300" Width="300" Closed="DeathWindow_Closed">
    <Grid>
        <Grid.Background>
            <ImageBrush TileMode="Tile" Viewport="0,0,220,190" ViewportUnits="Absolute" Stretch="None" ImageSource="pack://application:,,,/Resources/Images/bg_window.png"/>
        </Grid.Background>
        <Label  HorizontalAlignment="Center" Margin="11,46,11,0" VerticalAlignment="Top" Height="164" Width="272">
            <Label.Content>
                <TextBlock FontSize="24" Foreground="GhostWhite" TextAlignment="Center" TextWrapping="Wrap" Height="154" Width="262">Unfortunately, this challenge was too hard for you. Now rest in peace, brave hero. This treasure awaits for another daring one.</TextBlock>
            </Label.Content>
        </Label>
    </Grid>
</Window>