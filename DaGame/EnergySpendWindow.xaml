<Window x:Class="DaGame.EnergySpendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EnergySpendWindow" FontFamily="{StaticResource Pixel}" Icon="pack://application:,,,/Resources/Images/tile_t.png" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize" Height="150" Width="200">
    <Canvas Margin="0,0,0,13">
        <Canvas.Background>
            <ImageBrush TileMode="Tile" Viewport="0,0,220,190" ViewportUnits="Absolute" Stretch="None" ImageSource="pack://application:,,,/Resources/Images/bg_window.png"/>
        </Canvas.Background>
        <Label FontSize="15" HorizontalContentAlignment="Center" Canvas.Left="1" Width="193" Height="78">
            <Label.Content>
                <TextBlock Text="This will be rather hard for you. You need to make a big effort." Foreground="GhostWhite" TextAlignment="Center" TextWrapping="Wrap" Height="68" Width="166"/>
            </Label.Content>
        </Label>
        <Button Content="OK" Foreground="GhostWhite" Background="Black" Canvas.Left="10" Canvas.Top="78" Width="75" Click="OK_Click"/>
        <Button Content="Cancel" Foreground="GhostWhite" Background="Black" Canvas.Right="10" Canvas.Top="78" Width="75" Click="Cancel_Click"/>
    </Canvas>
</Window>
