<Window x:Class="DaGame.WinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DungeonMaster" FontFamily="{StaticResource Pixel}" Icon="pack://application:,,,/Resources/Images/tile_t.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow" Height="300" Width="300" Closed="WinWindow_Closed">
    <Grid>
        <Grid.Background>
            <ImageBrush TileMode="Tile" Viewport="0,0,220,190" ViewportUnits="Absolute" Stretch="None" ImageSource="pack://application:,,,/Resources/Images/bg_window.png"/>
        </Grid.Background>
        <Label Foreground="GhostWhite" HorizontalAlignment="Center" Margin="11,46,11,0" VerticalAlignment="Top" Height="143" Width="272">
            <Label.Content>
                <TextBlock FontSize="26" TextAlignment="Center" TextWrapping="Wrap" Height="133" Width="262">You've made it! It was hard, but you managed to find the treasure and get back. Congratulations!</TextBlock>
            </Label.Content>
        </Label>
    </Grid>
</Window>
